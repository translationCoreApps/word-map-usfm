{
  "name": "word-map-usfm",
  "version": "0.3.3",
  "description": "A utility for injecting alignment data into USFM3 files",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "tslint -c tslint.json src/**/*.ts",
    "docs": "typedoc --out docs --mode modules --target ES6",
    "test": "npm run lint && jest",
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "postbuild": "cp -rf package.json dist && cp -rf README.md dist &&  cp -rf LICENSE dist && cp -rf bin dist",
    "prepare": "if [ -d './src/' ]; then npm run build && cp -r ./dist/* . && rm -rf ./dist; fi",
    "dist": "npm test && npm run build && cd dist && npm publish"
  },
  "bin": {
    "word-map-usfm": "bin/magicli.js"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.+(ts|js)"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/translationCoreApps/word-map-usfm.git"
  },
  "author": "unfoldingWord",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/translationCoreApps/word-map-usfm/issues"
  },
  "homepage": "https://github.com/translationCoreApps/word-map-usfm#readme",
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "codecov": "^3.0.0",
    "jest": "^22.4.3",
    "ts-jest": "^22.4.4",
    "tslint": "^5.9.1",
    "typedoc": "^0.11.1",
    "typescript": "^2.8.3"
  },
  "dependencies": {
    "@types/fs-extra": "^5.0.4",
    "@types/yargs": "^11.0.0",
    "fs-extra": "^6.0.1",
    "magicli": "^0.1.2",
    "usfm-js": "^1.0.0-beta.30",
    "yargs": "^11.0.0"
  }
}
