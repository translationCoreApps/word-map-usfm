{
  "name": "wordmap-usfm",
  "version": "0.5.0",
  "description": "A utility for injecting alignment data into USFM files",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "tslint -c tslint.json src/**/*.ts",
    "docs": "typedoc --out docs --mode modules --target ES6",
    "test": "npm run lint && jest",
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "prepare": "if [ ! -d './dist/' ]; then npm run build; fi",
    "prepublishOnly": "npm test && npm run build"
  },
  "bin": {
    "wordmap-usfm": "bin/magicli.js"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.+(ts|js)"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/translationCoreApps/wordMAP-usfm.git"
  },
  "author": "unfoldingWord",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/translationCoreApps/wordMAP-usfm/issues"
  },
  "homepage": "https://github.com/translationCoreApps/wordMAP-usfm#readme",
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "jest": "^22.4.3",
    "ts-jest": "^22.4.4",
    "tslint": "^5.9.1",
    "typedoc": "^0.11.1",
    "typescript": "^2.8.3"
  },
  "dependencies": {
    "@types/fs-extra": "^5.0.4",
    "@types/yargs": "^11.0.0",
    "fs-extra": "^6.0.1",
    "magicli": "^0.1.2",
    "usfm-js": "^1.0.3",
    "wordmap-lexer": "^0.3.2",
    "yargs": "^11.0.0"
  }
}
